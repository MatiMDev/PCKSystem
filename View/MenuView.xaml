<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PCKSystem.View.MenuView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="10">
            <Button Text="Dodaj kartę" 
                    Command="{Binding AddCardCommand}"
                    BackgroundColor="Red"
                    CornerRadius="25"/>
            
            <Button Text="Lista kart"
                    Command="{Binding ListCardsCommand}"
                    BackgroundColor="Red"
                    CornerRadius="25"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
   